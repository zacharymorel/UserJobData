<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>UserJobData</title>
    <link rel="stylesheet" href="style.css">
  </head>
  <body>
    <h1>User Directory</h1>
    <ul>
      {{#users}}
      <li>
        <img src={{avatar}} alt="suppose to be an avatar.">
        <a href="localhost:3000/{{id}}/">{{name}}</a>
        {{#job}}
          <p>{{job}}, {{company}}</p>
        {{/job}}
        {{^job}}
          <p class="forHire">Available for hire</p>
        {{/job}}
      </li>
      {{/users}}
    </ul>
    <script src="main.js"></script>
  </body>
</html>
